<UserControl x:Class="LedMusic2.Nodes.NodeViews.VstSelection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LedMusic2.Nodes.NodeViews"
             xmlns:vst="clr-namespace:LedMusic2.VstInterop"
             mc:Ignorable="d" 
             d:DesignHeight="45" d:DesignWidth="300">
    <StackPanel>
        <TextBlock Text="VST Channel: " Height="20" />
        <ComboBox ItemsSource="{Binding Channels, Source={x:Static vst:VstInputManager.Instance}}" SelectedItem="{Binding SelectedChannel, Mode=TwoWay}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
    </StackPanel>
</UserControl>
