<UserControl x:Class="LedMusic2.Views.Waveform"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LedMusic2.Views"
             mc:Ignorable="d" x:Name="wv"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Canvas x:Name="PART_Canvas" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" >
            <Path Name="PART_Path" Fill="{Binding Foreground, ElementName=wv}" Stroke="{x:Null}" IsHitTestVisible="False" />
        </Canvas>
    </Grid>
</UserControl>
